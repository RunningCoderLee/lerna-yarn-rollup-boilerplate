{
  "version": "0.0.0",
  "private": true,
  "name": "lerna-yarn-rollup-boilerplate",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@3.2.1",
  "scripts": {
    "postinstall": "husky install",
    "g:eslint": "cd $INIT_CWD && eslint",
    "prettier": "prettier --write .",
    "g:stylelint": "cd $INIT_CWD && stylelint",
    "lint-staged": "lint-staged",
    "g:build": "cd $INIT_CWD && rollup",
    "g:clean": "cd $INIT_CWD && rimraf es lib dist",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.1",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "babel-jest": "^28.1.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "latest",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "react-test-renderer": "^18.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.74.1",
    "rollup-plugin-node-externals": "^4.0.0",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-styles": "^4.0.0",
    "stylelint": "^14.8.2",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.6.4"
  },
  "gacp": {
    "add": false,
    "push": false,
    "emoji": "code",
    "verify": true
  },
  "lint-staged": {
    "./packages/**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "./packages/**/*.css": "stylelint --fix",
    "*.{md,json}": "prettier --write"
  }
}
